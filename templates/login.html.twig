{% extends "@Theme/layout.html.twig" %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-3">
            </div>
            <div class="col-md-6">
                <h1>Login</h1>
                <form action="{{ path('login_check') }}" method="post">
                    {{ error }}
                    <div class="form-group">
                        <label>Username</label>
                        <input class="form-control" type="text" autofocus="autofocus" name="_username" value="" />
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input class="form-control" type="password" name="_password" value="" />
                    </div>
                    <div class="buttonbox">
                        {% if userbaseUrl is defined %}
                        <a href="{{ userbaseUrl }}/signup" class="btn btn-default">Signup</a>
                        <a href="{{ userbaseUrl }}/password/lost" class="btn btn-default">Lost password</a>
                        {% endif %}
                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>
                </form>
            </div>
            <div class="col-md-3">
            </div>
        </div>
    </div>
{% endblock %}
